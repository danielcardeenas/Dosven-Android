<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true" android:focusableInTouchMode="true"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/singup_i_to_want_hire"
                    android:id="@+id/usertype_user_radio"
                    android:textColor="@color/white"
                    android:layout_gravity=""
                    android:textSize="21sp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:text="@string/singup_i_want_to_work"
                    android:id="@+id/usertype_freelancer_radio"
                    android:textColor="@color/white"
                    android:textSize="21sp"
                    android:layout_gravity="" />

            </RadioGroup>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/login_button"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:layout_weight="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                style="@style/Text.Button"
                android:text="@string/singup_continue"
                android:textColor="@color/white"
                android:id="@+id/continue_text" />

            <ProgressBar
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:id="@+id/progressBar"
                android:indeterminate="true"
                android:layout_marginStart="12dp"
                android:layout_centerVertical="true"
                android:indeterminateTint="@color/white"
                android:layout_toEndOf="@id/continue_text"
                android:visibility="invisible"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>